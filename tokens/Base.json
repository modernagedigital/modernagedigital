{
  "Font-Family": {
    "display": {
      "$type": "fontFamilies",
      "$value": "Dala Floda Trial"
    },
    "text": {
      "$type": "fontFamilies",
      "$value": "Heebo",
      "$description": "Text font"
    }
  },
  "Font-Weight": {
    "light": {
      "$type": "fontWeights",
      "$value": "300"
    },
    "regular": {
      "$type": "fontWeights",
      "$value": "400"
    },
    "roman": {
      "$type": "fontWeights",
      "$value": "Roman No.2"
    },
    "medium": {
      "$type": "fontWeights",
      "$value": "500"
    },
    "bold": {
      "$type": "fontWeights",
      "$value": "Bold",
      "$description": "700"
    }
  },
  "font": {
    "hero": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{Font-Family.display}",
        "fontWeight": "{Font-Weight.roman}",
        "lineHeight": "{Line-Height.tighter}",
        "letterSpacing": "{Letter Spacing.tighter}",
        "fontSize": "{Font-Size.7xl}"
      }
    },
    "headline": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{Font-Family.display}",
        "fontWeight": "{Font-Weight.roman}",
        "lineHeight": "{Line-Height.tighter}",
        "fontSize": "{Font-Size.6xl}",
        "letterSpacing": "{Letter Spacing.tight}"
      }
    },
    "title1": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{Font-Family.display}",
        "fontWeight": "{Font-Weight.medium}",
        "lineHeight": "{Line-Height.tighter}",
        "fontSize": "{Font-Size.5xl}",
        "letterSpacing": "{Letter Spacing.tight}"
      }
    },
    "title2": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{Font-Family.display}",
        "fontWeight": "{Font-Weight.medium}",
        "lineHeight": "{Line-Height.tight}",
        "fontSize": "{Font-Size.4xl}",
        "letterSpacing": "{Letter Spacing.normal}"
      }
    },
    "title3": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{Font-Family.display}",
        "fontWeight": "{Font-Weight.medium}",
        "lineHeight": "{Line-Height.normal}",
        "fontSize": "{Font-Size.3xl}",
        "letterSpacing": "{Letter Spacing.tighter}"
      }
    },
    "eyebrow": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{Font-Family.text}",
        "fontWeight": "{Font-Weight.light}",
        "lineHeight": "{Line-Height.normal}",
        "fontSize": "{Font-Size.2xl}",
        "letterSpacing": "{Letter Spacing.tight}"
      }
    },
    "heading": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{Font-Family.text}",
        "fontWeight": "{Font-Weight.light}",
        "lineHeight": "{Line-Height.normal}",
        "fontSize": "{Font-Size.xl}",
        "letterSpacing": "{Letter Spacing.tight}"
      }
    },
    "subhead": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{Font-Family.text}",
        "fontWeight": "{Font-Weight.light}",
        "lineHeight": "{Line-Height.normal}",
        "fontSize": "{Font-Size.lg}",
        "letterSpacing": "{Letter Spacing.tight}"
      }
    },
    "body": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{Font-Family.text}",
        "fontWeight": "{Font-Weight.regular}",
        "lineHeight": "{Line-Height.normal}",
        "fontSize": "{Font-Size.base}",
        "letterSpacing": "{Letter Spacing.normal}"
      }
    },
    "footnote": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{Font-Family.text}",
        "fontWeight": "{Font-Weight.regular}",
        "lineHeight": "{Line-Height.relaxed}",
        "fontSize": "{Font-Size.sm}",
        "letterSpacing": "{Letter Spacing.wide}"
      }
    },
    "micro": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{Font-Family.text}",
        "fontWeight": "{Font-Weight.regular}",
        "lineHeight": "{Line-Height.relaxed}",
        "fontSize": "{Font-Size.xs}",
        "letterSpacing": "{Letter Spacing.wider}"
      }
    }
  },
  "Line-Height": {
    "none": {
      "$type": "lineHeights",
      "$value": "100%"
    },
    "tighter": {
      "$type": "lineHeights",
      "$value": "110%"
    },
    "tight": {
      "$type": "lineHeights",
      "$value": "125%"
    },
    "snug": {
      "$type": "lineHeights",
      "$value": "137.5%"
    },
    "normal": {
      "$type": "lineHeights",
      "$value": "150%"
    },
    "relaxed": {
      "$type": "lineHeights",
      "$value": "162.5%"
    },
    "loose": {
      "$type": "lineHeights",
      "$value": "200%"
    }
  },
  "Letter Spacing": {
    "tighter": {
      "$type": "letterSpacing",
      "$value": "-1.5%"
    },
    "tight": {
      "$type": "letterSpacing",
      "$value": "-0.75%"
    },
    "normal": {
      "$type": "letterSpacing",
      "$value": "0%"
    },
    "wide": {
      "$type": "letterSpacing",
      "$value": "0.75%"
    },
    "wider": {
      "$type": "letterSpacing",
      "$value": "2.5%"
    }
  },
  "Background": {
    "Dot-Pattern": {
      "$type": "asset",
      "$value": "https://cdn.jsdelivr.net/gh/modernagedigital/modernagedigital@main/assets/dot-pattern.png",
      "$description": "Background Dots"
    }
  },
  "Shadow": {
    "100": {
      "$type": "boxShadow",
      "$value": [
        {
          "color": "#2a2a2a08",
          "type": "dropShadow",
          "x": 0,
          "y": 2,
          "blur": 3,
          "spread": -6
        },
        {
          "color": "#2a2a2a0f",
          "type": "dropShadow",
          "x": 0,
          "y": 3,
          "blur": 8,
          "spread": -3
        }
      ]
    },
    "200": {
      "$type": "boxShadow",
      "$value": [
        {
          "color": "#2a2a2a0d",
          "type": "dropShadow",
          "x": 0,
          "y": 2,
          "blur": 10,
          "spread": -6
        },
        {
          "color": "#2a2a2a1f",
          "type": "dropShadow",
          "x": 0,
          "y": 4,
          "blur": 32,
          "spread": -6
        }
      ]
    },
    "300": {
      "$type": "boxShadow",
      "$value": [
        {
          "color": "#2a2a2a0a",
          "type": "dropShadow",
          "x": 0,
          "y": 3,
          "blur": 16,
          "spread": -6
        },
        {
          "color": "#2a2a2a17",
          "type": "dropShadow",
          "x": 0,
          "y": 6,
          "blur": 40,
          "spread": -6
        }
      ]
    }
  }
}